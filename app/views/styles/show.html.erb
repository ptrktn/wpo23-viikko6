<%= render @style %>

<% if @style.beers.count.positive? %>
<p>
  <strong>Beers:</strong>
  <ul>
	<% @style.beers.each do |beer| %>
	<li><%= link_to beer.name, beer %></li>
	<% end %>
  </ul>
</p>
<% end %>


<div>
  <p><%= edit_and_destroy_buttons(@style) %></p>
  <p><%= link_to "Back to styles", styles_path %></p>
</div>
