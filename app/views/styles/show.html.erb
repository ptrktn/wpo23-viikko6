<%= render @style %>

<% if @style.beers.count.positive? %>
<p>
  <strong>Beers:</strong>
  <ul>
	<% @style.beers.each do |beer| %>
	<li><%= link_to beer.name, beer %></li>
	<% end %>
  </ul>
</p>
<% end %>

<div>
  <p><%= link_to "Edit this style", edit_style_path(@style), class: 'btn btn-primary' %></p>
  <p><%= button_to "Destroy this style", @style, method: :delete, class: 'btn btn-danger' %></p>
  <%= link_to "Back to styles", styles_path %>
</div>
